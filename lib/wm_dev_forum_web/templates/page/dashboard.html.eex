<%= form_for @conn, page_path(@conn, :search_questions), [id: :signupform], fn f-> %>
<div class="input-group">
  <label for="searchtags" class="text-info col-md-3">Search Tags:</label>
  <input type="text" name="search_tags" id="searchtags" class="form-control col-md-7">
  <div class="input-group-append">
    <button type="submit" > <%= gettext("Search") %></input>
  </div>
</div>
<% end %>
<div class="jumbotron">
  <h2 class = "text-top	text-bottom">Dashboard</h2>
  <div class="container">
      <div class="row">
        <div class="col-sm">
          <span> <%= @user_stats.total_answers %> </span>
          <h3>  Total Answers </h3>
        </div>
        <div class="col-sm">
          <span> <%= @user_stats.number_of_correct_answers %> </span>
            <h3> Correct Answers </h3>
        </div>
        <div class="col-sm">
          <span> <%= @user_stats.total_questions_posted %> </span>
          <h3> Questions Asked </h3>
        </div>
      </div>
  </div>
  <p class ="baseline	bottom"><a href="/question">Add Question</a></p>
