<div >

  <div class="form-group">
    <label class="col-md-5 control-label" for="button1id"></label>
    <div class="col-md-7">
      <%= if not @my_questions do %>
      <a href="/myquestions"><button   id="button1id" name="button1id" class="btn btn-success">My Questions</button></a>
      <%= end%>
      <%= if @my_questions do %>
      <a href="/allquestions"><button   id="button2id" name="button2id" class="btn btn-success">All Questions</button></a>
      <%= end %>
    </div>
  </div>

<section class="details-card">
    <div class="container">
        <div class="row">
          <%=  for question <- @questions do %>
            <div class="col-md-4">
                <div class="card-content">
                    <div class="card-img">
                       <%=question.question_text%>
                    </div>
                    <div class="card-desc">
                        <%= if (String.length(question.description) > 40) do %>
                          <p><%= String.slice(question.description, 1..40)%>...</p>
                        <%= else %>
                          <p><%=question.description%></p>
                        <% end %>

                            <a href=<%= "/question/"<>question.question_uuid <> "/answers" %> class="btn-card">Answer</a>
                    </div>
                </div>
            </div>
          <%= end %>
        </div>
    </div>
</section>
</div>
