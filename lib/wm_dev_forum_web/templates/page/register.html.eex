<div class="jumbotron">
  <h2><%= gettext "Register for %{name}!", name: "Watermark Dev Forum" %></h2>
  <div>
    <%= form_for @conn, page_path(@conn, :register), [id: :signupform], fn _f-> %>
      <label>First Name:</label>
      <input type="text" name="first_name"> </input>
      <br/>

      <label>Last Name:</label>
      <input type="text" name="last_name"> </input>
      <br/>

      <label>Email:</label>
      <input type="text" name="email"> </input>
      <br/>

      <label>password:</label>
      <input type="password" name="password"> </input>
      <br/>

      <label>Confirm password:</label>
      <input type="password" name="confirm_password"> </input>
      <br/>
      <button type="submit"> <%= gettext("Register") %></input>
      <% end %>
  </div>
</div>
